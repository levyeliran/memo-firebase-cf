{
  "compilerOptions": {
    "lib": ["es6", "es2015.promise"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "functions",
    "sourceMap": false,
    "target": "es5",
    "typeRoots": [
      "./functions/node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "functions/node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "./functions/node_modules/**/*"
  ]
}